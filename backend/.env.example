# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/trading-app
# or for MongoDB Atlas free tier:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/trading-app

# For SQLite
# SQLITE_PATH=./data/trading-app.sqlite

# For Firebase (Optional)
# FIREBASE_API_KEY=your_api_key
# FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# FIREBASE_MESSAGING_SENDER_ID=your_sender_id
# FIREBASE_APP_ID=your_app_id 